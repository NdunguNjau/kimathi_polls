<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_alert"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@mipmap/voting_logo" />

            <TextView
                android:id="@+id/analytics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:text="Welcome to Kimathi Polls"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_winner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_winner"
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_winner_home" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_winner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Results are Out!"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Add your subtitle and text here -->
                        <TextView
                            android:id="@+id/subtitle_winner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Election Winners"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_winner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The wait is over! Click here to view the final election results including the list of winners." />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_vote"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_vote"
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_vote_home" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_vote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cast your Vote"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Add your subtitle and text here -->
                        <TextView
                            android:id="@+id/subtitle_vote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shape your tomorrow"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_vote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choices of Today impact Tomorrow. Exercise your right to vote and contribute to a better future." />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_alert"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_alert"
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_silence_home" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_alert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usinyamazishwe!"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <!-- Add your subtitle and text here -->
                        <TextView
                            android:id="@+id/subtitle_alert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speak Up against Fraud!"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_alert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't let them get away with it! Report any suspicious activities or fraud observed in the elections." />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_vie"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_vie"
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_vie_home" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_vie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Run for Office"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Add your subtitle and text here -->
                        <TextView
                            android:id="@+id/subtitle_vie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Become a Candidate Today!" />

                        <TextView
                            android:id="@+id/text_vie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You could be the next big thing in Kimathi! Take the first step towards becoming a leader and vie for an electoral position." />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>